<div class="container">
    <%= form_for @user, :url => password_reser_path(params[:id]) do |f| %>
        <%= if @user.errors.any? %>
            <div class="error_messages">
                <h3>form is invalid</h3>
                <ul>
                    <% for messages in @user.errors.full_messages %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password %>
        </div>

        <div class="field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>
        </div>

        <div class="actions">
            <%= f.submit 'Update Password' %>
        </div>
    <% end %>
</div>